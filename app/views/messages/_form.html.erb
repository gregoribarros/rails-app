<%= simple_form_for(@message) do |f| %>

<div class="field">
  <div class="control">
    <%= f.input :message, label: "Deixe uma mensagem", input_html: {class: "textarea "}, 
    wrapper: false, label_html: {class: "label"}, placeholder: "Escreva aqui: " %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %> 

<% end %>